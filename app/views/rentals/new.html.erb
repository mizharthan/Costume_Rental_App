<h1>Request Form to Rent "<%= @costume.name %>"</h1>

<%= simple_form_for(@rental, html: { class: "rental-form" }) do |f| %>
  <%= f.association :costume %>
  <%= f.input :start_date, as: :date, label: "Start Date" %>
  <%= f.input :end_date, as: :date, label: "End Date" %>
  <%= f.button :submit, "Send Rental Request", class: "btn btn-primary" %>
<% end %>
